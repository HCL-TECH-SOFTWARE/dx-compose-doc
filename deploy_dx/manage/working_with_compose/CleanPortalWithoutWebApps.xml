<?xml version="1.0" encoding="UTF-8"?>
<request export-users="false" type="update" version="8.5.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="PortalConfig_8.5.0.xsd">
    
    <!-- Deletes the Portal resources, resulting in a 'empty' Portal -->
    <portal action="locate">
<!-- Do not need to remove      <services-settings action="delete" objectid="*"/> -->
       <language action="delete" objectid="*"/>
<!-- Deleting virtual-resources not supported yet      <virtual-resource action="delete" objectid="*"/> -->
       <markup action="delete" objectid="*"/>
       <client action="delete" objectid="*"/>
       <event-handler action="delete" objectid="*"/>
       <skin action="delete" objectid="*"/>
       <theme action="delete" objectid="*"/>
       <content-node action="delete" objectid="*"/>
<!-- Causing problems with import of credentials after empty-portal task is run       <credential-segment action="delete" objectid="*"/>  -->
       <credential-segment action="delete" name="DefaultAdminSegment"/> 
       <url-mapping-context action="delete" objectid="*"/>
<!-- Hit errors here so these stay for now      <policy-node action="delete" objectid="*"/> -->
<!-- No IDs attached so do not need to remove      <action action="delete" objectid="*"/> -->
<!-- No IDs attached so do not need to remove      <resource-type action="delete" objectid="*"/> -->
    </portal>
</request>
